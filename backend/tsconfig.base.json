{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend/account-config": ["libs/account/config/src/index.ts"],
      "@backend/authentications": ["libs/account/authentications/src/index.ts"],
      "@backend/core": ["libs/shared/core/src/index.ts"],
      "@backend/data-access": ["libs/shared/data-access/src/index.ts"],
      "@backend/file-uploader": ["libs/file-vault/file-uploader/src/index.ts"],
      "@backend/file-vault-config": ["libs/file-vault/config/src/index.ts"],
      "@backend/fit-config": ["libs/fit/config/src/index.ts"],
      "@backend/fit-feedback": ["libs/fit/fit-feedback/src/index.ts"],
      "@backend/fit-models": ["libs/fit/models/src/index.ts"],
      "@backend/fit-training": ["libs/fit/fit-training/src/index.ts"],
      "@backend/helpers": ["libs/shared/helpers/src/index.ts"],
      "@backend/interceptors": ["libs/shared/interceptors/src/index.ts"],
      "@backend/pipes": ["libs/shared/pipes/src/index.ts"],
      "@backend/user": ["libs/account/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
